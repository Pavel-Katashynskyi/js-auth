{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<div class="page page--background">
    <header>
        {{> back-button}}
    </header>

    <form class="page__section">
        <h1 class="page__title">Реєстрація</h1>

        <div class="form">
            <div class="form__item">
                {{> field action="singnupForm.change" label="Ел. адреса" placeholder="Ваш email" type="email"
                name="email" }}
                <span name="email" class="form__error">Помилка</span>
            </div>
            <div class="form__item">
                {{> field-password action="singnupForm.change" label="Пароль" placeholder="Введіть пароль"
                type="password"
                name="password" }}
                <span name="password" class="form__error">Помилка</span>
            </div>
            <div class="form__item">
                {{> field-select action="singnupForm.change" label="Роль"
                name="role" placeholder="Оберіть роль" list=data.role}}
                <span name="role" class="form__error">Помилка</span>
            </div>
            <div class="form__item">
                {{> field-checkbox action="singnupForm.change" label="Ви погоджуєтеся з правилами сервіса"
                name="isConfirm" }}
                <span name="isConfirm" class="form__error">Помилка</span>
            </div>
        </div>

        <button onclick="singnupForm.submit()" class="button" type="button">Зареєструватися</button>

        <span class="alert alert--error">Увага, помилка!</span>
    </form>
</div>
