<div class="page page--background">
    <header>
        {{> back-button}}
    </header>

    <form class="page__section">
        <h1 class="page__title">Відновлення паролю</h1>

        <div class="form">
            <div class="form__item">
                {{> field action="recoveryConfirmForm.change" label="Код" placeholder="Ваш код" type="number"
                name="code" }}
                <span name="email" class="form__error">Помилка</span>
            </div>
            <div class="form__item">
                {{> field-password action="recoveryConfirmForm.change" label="Новий пароль" placeholder="Введіть пароль"
                type="password"
                name="password" }}
                <span name="password" class="form__error">Помилка</span>
            </div>
            <div class="form__item">
                {{> field-password action="recoveryConfirmForm.change" label="Новий пароль ще раз" placeholder="Введіть пароль"
                type="password"
                name="passwordAgain" }}
                <span name="passwordAgain" class="form__error">Помилка</span>
            </div>
        </div>

        <button onclick="recoveryConfirmForm.submit()" class="button button--disabled" type="button">Змінити пароль</button>

        <span class="alert alert--disabled">Увага, помилка</span>
    </form>
</div>